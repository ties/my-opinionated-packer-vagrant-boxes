      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vm_name": "{{ user `PACKER_BOX_NAME` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "384",
        "numvcpus": "2"
      }
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/filesystem.sh",
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/ruby.sh",
        "scripts/chef.sh",
        "scripts/puppet.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "../builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_{{.Provider}}.box"
      },
      {
          "type": "checksum",
          "checksum_types": ["sha256","sha512"],
          "output": "../builds/CHECKSUMS"
      },
      {
          "type": "manifest",
          "output": "../builds/{{ user `PACKER_BOX_NAME` }}.manifest.json",
          "strip_path": true
      }
    ]
  ]
}
