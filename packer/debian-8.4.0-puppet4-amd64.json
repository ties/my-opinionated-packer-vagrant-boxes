  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "scripts": [
        "scripts/filesystem.sh",
        "scripts/update.sh",
        "scripts/grsec_repo_kernel.sh",
        "scripts/sshd.sh",
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/ruby.sh",
        "scripts/puppet_pc1.sh",
        "scripts/rc_local.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "output": "../builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_puppet4_{{.Provider}}.box"
      }
    ]
  ]
